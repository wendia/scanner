/* components/navBar/navigator-bar.wxss */
.navigator {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  height: 92rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  align-items: center;
  justify-content: space-around;
}
.tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 10rpx 0;
  position: relative;
}
.tab .icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
}
.tab .label {
  font-size: 24rpx;
  color: #666;
}
.tab.active .label {
  color: #06c;
  font-weight: 600;
}
.badge {
  position: absolute;
  top: 8rpx;
  right: 24rpx;
  min-width: 26rpx;
  height: 26rpx;
  border-radius: 13rpx;
  background: #ff3b30;
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
}
