.page { padding:20rpx; background:#fff; }
.camera-wrap { position:relative; }
.scan-box {
  position:absolute; left:50%; top:50%; width:260rpx; height:200rpx; margin-left:-130rpx; margin-top:-100rpx;
  border:2rpx solid rgba(0,200,255,0.9); border-radius:6rpx;
}
.controls { display:flex; gap:12rpx; margin-top:12rpx; }
.cart { margin-top:16rpx; background:#f7f7f7; padding:12rpx; border-radius:8rpx; }
.cart-item { display:flex; justify-content:space-between; padding:8rpx 0; align-items:center; }
.title { font-weight:bold; margin-bottom:8rpx; }
.submit { margin-top:12rpx; background:#06c; color:#fff; padding:12rpx; border-radius:8rpx;}
